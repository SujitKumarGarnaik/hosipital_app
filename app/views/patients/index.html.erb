<h1>All Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.address %></td>
        <td>
          <%= link_to 'Show', patient_path(patient), class: 'button secondary' %> |
          <%= link_to 'Edit', edit_patient_path(patient), class: 'button' %> |
          <%= link_to 'Delete', patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button danger' %> |
          <%= link_to 'Book Appointment', new_patient_appointment_path(patient), class: 'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Patient', new_patient_path, class: 'button' %> |
<%= link_to 'Back to Home', root_path, class: 'button secondary' %>  
