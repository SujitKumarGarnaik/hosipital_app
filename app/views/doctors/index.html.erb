<h1>Doctors List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Specialization</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.specialization %></td>
        <td class="action-buttons">
          <%= link_to 'Show', doctor_path(doctor), class: 'show-btn' %>
          <%= link_to 'Edit', edit_doctor_path(doctor), class: 'edit-btn' %>
          <%= link_to 'Delete', doctor_path(doctor), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Doctor', new_doctor_path %> |
<%= link_to 'Back to Home', root_path %>
