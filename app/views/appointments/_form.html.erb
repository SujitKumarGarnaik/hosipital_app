<%= form_with model: @appointment, local: true do |f| %>
  <div>
    <%= f.label :doctor_id, "Doctor" %>
    <%= f.collection_select :doctor_id, Doctor.all, :id, :name, prompt: "Select Doctor" %>
  </div>

  <div>
    <%= f.label :patient_id, "Patient" %>
    <%= f.collection_select :patient_id, Patient.all, :id, :name, prompt: "Select Patient" %>
  </div>

  <div>
    <%= f.label :appointment_date, "Appointment Date" %>
    <%= f.date_field :appointment_date %>
  </div>

  <div>
    <%= f.label :appointment_time, "Appointment Time" %>
    <%= f.time_field :appointment_time, step: 60 %>
  </div>

  <div>
    <%= f.submit @appointment.new_record? ? "Book Appointment" : "Update Appointment" %>
  </div>
<% end %>

<%= link_to 'Back to List', appointments_path %>
