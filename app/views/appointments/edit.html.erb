<h1>Edit Appointment</h1>

<%= form_with model: @appointment, local: true do |f| %>
  <p>
    <%= f.label :doctor_id, "Doctor" %>
    <%= f.collection_select :doctor_id, Doctor.all, :id, :name %>
  </p>
  <p>
    <%= f.label :patient_id, "Patient" %>
    <%= f.collection_select :patient_id, Patient.all, :id, :name %>
  </p>

  <p>
    <%= f.label :appointment_date, "Appointment Date" %>
    <%= f.date_field :appointment_date %>
  </p>

  <p>
    <%= f.label :appointment_time, "Appointment Time" %>
    <%= f.time_field :appointment_time %>
  </p>

  <p>
    <%= f.submit "Update Appointment" %>
  </p>
<% end %>

<%= link_to 'Back', @appointment %>
