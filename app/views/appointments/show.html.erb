<h1>Appointment Details</h1>

<% if @appointment %>
  <p><strong>Patient:</strong> <%= @appointment.patient.name %></p>
  <p><strong>Patient Age:</strong> <%= @appointment.patient.age %></p>
  <p><strong>Patient Phone:</strong> <%= @appointment.patient.phone %></p>
  <p><strong>Patient Email:</strong> <%= @appointment.patient.email %></p>
  <p><strong>Doctor:</strong> <%= @appointment.doctor.name %></p>
  <p><strong>Date:</strong> <%= @appointment.appointment_date.strftime('%d-%m-%Y') %></p>
  <p><strong>Time:</strong> <%= @appointment.appointment_time.strftime('%I:%M %p') %></p>
  <p><strong>Status:</strong> <%= @appointment.status.capitalize %></p>

  <div class="actions">
    <%= link_to 'Edit Appointment', edit_appointment_path(@appointment), class: 'btn btn-warning' %> |
    <%= link_to 'Back to List', appointments_path, class: 'btn btn-secondary' %>
  </div>
<% else %>
  <p>No appointment found.</p>
<% end %>
